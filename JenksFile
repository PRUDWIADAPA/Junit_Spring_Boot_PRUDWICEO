pipeline {
    agent{
        docker{
            image:'maven:3.9.8-eclipse-temurin-21'
            reuseNode: true
        }
    }

    stages {
        stage('Build') {
            steps {
                echo 'BUILDING THE PROJECT PRUDWI CEO'

                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Unit Testing'){
            echo 'Performing the Unit Test'
            steps{
                sh 'mvn test'
            }
            post{
                always{
               junit '**/target/surefire-reports/*.xml'
                }
            }
        }
    }
}
